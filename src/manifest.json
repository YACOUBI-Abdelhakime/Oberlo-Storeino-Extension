{
  "manifest_version": 2,
  "name": "Storeino product cloner",
  "homepage_url": "http://localhost:8080/",
  "description": "",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "*://*/*",
    "storage",
    "http://localhost:8085/"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts" : [
    {
        "js" : ["js/content-script.js"],
        "matches" : ["https://*.aliexpress.com/item/*"]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Storeino products cloner",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}
